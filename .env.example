# Environment Configuration — GOVRES
# Copy this file to .env and fill in your values

# ──────────────────────────────────────────
# Database (PostgreSQL)
# ──────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_NAME=govres
DB_USER=govres_admin
DB_PASSWORD=your_secure_password_here

# ──────────────────────────────────────────
# API Server
# ──────────────────────────────────────────
API_PORT=4000
API_HOST=0.0.0.0
NODE_ENV=development

# ──────────────────────────────────────────
# Authentication (JWT)
# ──────────────────────────────────────────
JWT_SECRET=change_this_to_a_256_bit_random_secret
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# ──────────────────────────────────────────
# Encryption (AES-256-GCM)
# ──────────────────────────────────────────
MASTER_ENCRYPTION_KEY=change_this_to_a_strong_master_key
HMAC_PII_KEY=change_this_for_pseudonymization

# ──────────────────────────────────────────
# Oracle Configuration
# ──────────────────────────────────────────
ORACLE_ATTESTATION_VALIDITY_HOURS=24
ORACLE_SENSOR_QUORUM_PERCENT=75
ORACLE_CONFIDENCE_THRESHOLD=90

# ──────────────────────────────────────────
# Gold Reserve
# ──────────────────────────────────────────
GOLD_RESERVE_ALLOCATION_PERCENT=10
GOLD_PRICE_FEED_URL=https://api.metals.live/v1/spot/gold

# ──────────────────────────────────────────
# Cocoa Reserve
# ──────────────────────────────────────────
COCOBOD_API_URL=https://cocobod.gh/api/v1
COCOA_PRODUCER_PRICE_PER_BAG=2070
COCOA_STANDARD_BAG_KG=64

# ──────────────────────────────────────────
# eCedi CBDC Integration (when available)
# ──────────────────────────────────────────
ECEDI_GATEWAY_URL=
ECEDI_API_KEY=
ECEDI_SANDBOX=true

# ──────────────────────────────────────────
# Mobile Money Integration
# ──────────────────────────────────────────
MTN_MOMO_API_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_API_KEY=
MTN_MOMO_SUBSCRIPTION_KEY=
VODAFONE_CASH_API_URL=
AIRTELTIGO_MONEY_API_URL=

# ──────────────────────────────────────────
# Logging
# ──────────────────────────────────────────
LOG_LEVEL=info
LOG_DIR=./logs

# ──────────────────────────────────────────
# CORS
# ──────────────────────────────────────────
CORS_ORIGIN=http://localhost:3000

# ──────────────────────────────────────────
# Rate Limiting
# ──────────────────────────────────────────
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
