{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@govres/shared": ["packages/shared/src"],
      "@govres/shared/*": ["packages/shared/src/*"],
      "@govres/ledger": ["packages/ledger/src"],
      "@govres/ledger/*": ["packages/ledger/src/*"],
      "@govres/oracle": ["packages/oracle/src"],
      "@govres/oracle/*": ["packages/oracle/src/*"],
      "@govres/security": ["packages/security/src"],
      "@govres/security/*": ["packages/security/src/*"]
    }
  },
  "include": [
    "packages/*/src//*.ts"
  ],
  "exclude": ["node_modules", "dist", "packages/web"]
}
